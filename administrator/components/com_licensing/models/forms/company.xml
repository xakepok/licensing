<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_licensing/models/rules">
    <fieldset name="names">
        <field
                name="id"
                type="hidden"
        />
        <field
                name="name"
                type="text"
                label="COM_LICENSING_COMPANY_NAME"
                description="COM_LICENSING_COMPANY_NAME_DESC"
                required="true"
                autocomplete="off"
                class="input-xlarge"
        />
        <field
                name="website"
                type="url"
                label="COM_LICENSING_COMPANY_WEBSITE"
                description="COM_LICENSING_COMPANY_WEBSITE_DESC"
                required="false"
                autocomplete="off"
                class="input-xlarge"
        />
        <field
                name="email"
                type="email"
                label="COM_LICENSING_COMPANY_EMAIL"
                description="COM_LICENSING_COMPANY_EMAIL_DESC"
                required="false"
                autocomplete="off"
                class="input-xlarge"
        />
        <field
                name="phone"
                type="tel"
                label="COM_LICENSING_COMPANY_PHONE"
                description="COM_LICENSING_COMPANY_PHONE_DESC"
                required="false"
                autocomplete="off"
                class="input-xlarge"
        />
        <field
                name="state"
                type="list"
                label="JSTATUS"
                description="JFIELD_PUBLISHED_DESC"
                class="inputbox"
                size="1"
                default="1"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>
    </fieldset>
</form>