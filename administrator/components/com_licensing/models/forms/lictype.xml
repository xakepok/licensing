<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_licensing/models/rules">
    <fieldset name="names">
        <field
                name="id"
                type="hidden"
        />
        <field
                name="companyID"
                type="Company"
                label="COM_LICENSING_LICTYPE_AUTHOR"
                description="COM_LICENSING_LICTYPE_AUTHOR_DESC"
                autocomplete="off"
                class="input-xlarge"
        />
        <field
                name="type"
                type="text"
                label="COM_LICENSING_LICTYPE_NAME"
                description="COM_LICENSING_LICTYPE_NAME_DESC"
                required="true"
                autocomplete="off"
                class="input-xlarge"
        />
        <field
                name="state"
                type="list"
                label="JSTATUS"
                description="JFIELD_PUBLISHED_DESC"
                class="inputbox"
                size="1"
                default="1"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>
    </fieldset>
</form>